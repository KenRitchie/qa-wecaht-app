/**index.wxss**/
.container{
  background-color: rgba(245,245,245,1);
  font-family:  KaiTi;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(249,217,48,1);
  width:100vw;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx auto;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  text-align: center;
}

.usermotto {
  margin-top: 400rpx;
}
.header-box{
  margin: 0 auto;
  display: flex;
flex-direction: column;


}
.question-box{
  margin:20rpx auto 100rpx;
  width:80vw;
  border-radius:20rpx;
  /* border: 2rpx solid rgba(249,217,48,1); */
  box-sizing: border-box;
  flex:1;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction:column;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  opacity: 0.7;
background-color: rgba(245,245,245);
}
.picker{
  text-align: center;
  color:rgba(2,62,150,1);
  margin-bottom: 8vh;
  font-size: 45rpx;
  font-weight: bold;
  position: relative;
}
.bgImg{
  height:250rpx;
  width:250rpx;
  opacity:0.2;
  margin:auto;
}
.other-wigdget{
position: absolute;
left: 0;
right: 0;
