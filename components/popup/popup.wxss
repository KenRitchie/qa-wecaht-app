/* components/popup/popup.wxss */
/* 蒙层 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

/* 弹框 */
.modal-dialog {
    font-size: 30rpx;
    width: 560rpx;
    position: fixed;
    top: 30%;
    left: 0;
    right: 0;
    margin: auto;
    z-index: 1500;
    background: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
}

/* 弹框标题*/
.m-title {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    align-self: stretch;
    font-size: 36rpx;
}

.m-dialog {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 12vw;
    transform: translateY(-50%);
    margin-top: -112rpx;
    z-index: 1001;
    width: 76vw;
    height: 60vh;
}

/* best */
.m-avater-best {

    width: 364rpx;
    height: 332rpx;
}

.m-title-best {
    display:flex;
    align-center:center;
    margin: 33rpx auto;
    height: 32rpx;
    font-size: 28rpx;
    font-family: MicrosoftYaHeiUI-Bold, MicrosoftYaHeiUI;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 28rpx;
}

.m-title-best image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right:4px;
    position:relative;
    top:-1px;
}

.m-button-best {
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    align-items: center;

}

.m-button-best button {
    width: 260rpx;
    height: 92rpx;
    border-radius: 46rpx;
    font-size: 32rpx;
    font-family: MicrosoftYaHeiUI;
    line-height: 92rpx;
    color: rgba(255, 255, 255, 1);
    vertical-align: middle;
}

button.default {
    border: 2rpx solid rgba(255, 255, 255, 1);
    background: rgba(0, 0, 0, 0.1);

}

button.success {
    background: linear-gradient(360deg, rgba(255, 105, 3, 1) 0%, rgba(255, 153, 0, 1) 100%);
    box-shadow: 0 6rpx 6rpx 0 rgba(255, 105, 3, 0.3);
    margin: 0 0 0 32rpx;
}

/* best end */

/* better */

.m-header-better {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    width: 76vw;


}

.m-avater-better {
    width: 320rpx;
    height: 227rpx;
    margin: 0 auto;
}

.m-content-better {
    background: rgba(255, 255, 255, 1);
    border-radius: 24rpx;
    width: 76vw;
    padding:32rpx;
}

.min-con{
  height: 430rpx;
}
.m-content-word {
    color: rgba(102, 102, 102, 1);
    line-height: 42rpx;
    font-size: 28rpx;
}

.m-content-refresh {
    text-align: center;
    height: 37rpx;
    font-size: 28rpx;
    font-family: MicrosoftYaHei;
    color: rgba(76, 132, 255, 1);
    line-height: 37rpx;
}

.m-content-button button {
    margin: 32rpx auto;
    width: 380rpx;
    background: linear-gradient(360deg, rgba(255, 105, 3, 1) 0%, rgba(255, 153, 0, 1) 100%);
    box-shadow: 0rpx 6rpx 6rpx 0rpx rgba(255, 105, 3, 0.3);
    border-radius: 46rpx;
    font-size: 32rpx;
    font-family: MicrosoftYaHeiUI;
    color: rgba(255, 255, 255, 1);
    line-height: 92rpx;
}

.m-content-button.input button {
    width: 80% !important;
}

.cancel-btn {

    width: 64rpx;
    height: 64rpx;
    border: 3rpx solid rgba(255, 255, 255, 1);
    color: rgba(255, 255, 255, 1);
    border-radius: 32rpx;
    line-height: 64rpx;
    text-align: center;
    margin-bottom: 32rpx;

}

.better {
    top: 64rpx !important;
}

.input {
    top: -32rpx !important;
}


/* better end */

/* input begin */
