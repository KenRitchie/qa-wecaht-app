    display: flex;
    position: relative;
    z-index: 1;
    align-items: center;
    width: 100%;
    height: 62px;
    background: linear-gradient(360deg, rgba(255, 105, 3, 1) 0%, rgba(255, 153, 0, 1) 100%);
    border-radius: 24rpx 24rpx 0rpx 0rpx;

}

.express-title {
    font-size: 32rpx;
    font-family: MicrosoftYaHeiUI;
    color: rgba(255, 255, 255, 1);
    line-height: 41rpx;
    margin-left: 110px;
}

.img-box {
    position: absolute;
    margin-left: 47rpx;
    bottom: -5px;
    z-index: 1;
}

.m-avater-input image {
    width: 180rpx;
    height: 224rpx;
}

.m-content-input {
    width: 100%;
    background: rgba(255, 255, 255, 1);
    border-radius: 0rpx 0rpx 24rpx 24rpx;
}
.c-input {
  position: relative;
  z-index: 10000000;

}
.c-input span,
input,
textarea {
    font-size: 26rpx;
    font-family: MicrosoftYaHeiUI;
